<a href="/insertar" class="btn btn-dark btn-lg">Agregar producto</a><hr>

<table id="mitabla" class="table table-striped table-responsive-md btn-table">
    <thead>
        <tr>
        <th class="th-sm">ID</th> {{!-- Scope = negritas --}}
        <th class="th-sm">Nombre</th>
        <th class="th-sm">Price</th>
        <th class="th-sm">Picture</th>
        <th class="th-sm">Category</th>
        <th class="th-sm">Description</th>
        <th>Options</th>
        </tr>
      </thead>

        {{#products}}
        <tr><br>
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{picture}}</td>
            <td>{{category}}</td>
            <td>{{description}}</td>
            <td>
              <form action="/api/product/{{_id}}" method="GET">
                <button class="btn btn-dark" type="submit">Editar</button>
              </form>
            </td>
            <td>
              <form action="/api/product/{{_id}}" method="GET">
                <button class="btn btn-dark" type="submit">Eliminar</button>
              </form>
            </td>
        </tr>
        {{/products}}
    </tbody>
</table>